# ========================================
# EDEN BACKEND - ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and fill in the values
# Lines marked [REQUIRED] must be present for the app to start
# Lines marked [OPTIONAL] are for advanced features

# ========== SERVER CONFIGURATION [REQUIRED] ==========
ENVIRONMENT=development
PORT=8000
BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000

# ========== DATABASE [REQUIRED] ==========
# MongoDB connection string
MONGO_URL=mongodb://localhost:27017
DB_NAME=eden_claims

# ========== AUTHENTICATION [REQUIRED] ==========
# JWT secret for signing tokens (use a strong random string in production)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256

# ========== FILE STORAGE [OPTIONAL] ==========
# Upload directory paths (repo-relative or absolute)
# UPLOAD_DIR=/path/to/uploads
# PHOTO_DIR=/path/to/uploads/inspections

# ========== AI / LLM [OPTIONAL] ==========
# Ollama (free tier, default provider)
OLLAMA_API_KEY=your_ollama_api_key
OLLAMA_BASE_URL=https://ollama.com
OLLAMA_MODEL=gemma3:12b

# OpenAI (paid, used as fallback or for vision/audio)
OPENAI_API_KEY=your_openai_api_key

# Optional AI model/provider routing controls (comma-separated provider priority)
# Global default fallback order for all AI tasks
AI_PROVIDER_ORDER_DEFAULT=ollama,openai,anthropic
# Task-specific overrides (optional)
# AI_TASK_PROVIDER_SUMMARIZE_COMMUNICATION_THREAD=anthropic,openai
# AI_TASK_PROVIDER_SUGGEST_FOLLOW_UP_SMS=openai,anthropic
# AI_TASK_PROVIDER_DRAFT_COMMUNICATION=openai,anthropic
# AI_TASK_PROVIDER_CLAIM_BRIEF=anthropic,openai
# AI_TASK_PROVIDER_SUPPLEMENT_JUSTIFICATION=anthropic,openai

# ========== THIRD-PARTY INTEGRATIONS [OPTIONAL] ==========
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_ACCESS_TOKEN=
GOOGLE_REFRESH_TOKEN=
GMAIL_USER=your_gmail_user
GMAIL_APP_PASSWORD=your_gmail_app_password

# SignNow e-signature
SIGNNOW_CLIENT_ID=your_signnow_client_id
SIGNNOW_CLIENT_SECRET=your_signnow_client_secret
SIGNNOW_ACCESS_TOKEN=
SIGNNOW_API_URL=https://api.signnow.com
SIGNNOW_SENDER_EMAIL=noreply@eden.com

# Gamma integration
GAMMA_API_TOKEN=your_gamma_api_token
GAMMA_CLIENT_ID=your_gamma_client_id
GAMMA_CLIENT_SECRET=your_gamma_client_secret
GAMMA_DATABASE_ID=

# Stripe payments
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_API_KEY=your_stripe_api_key

# Gamma (real estate data)
GAMMA_API_KEY=your_gamma_api_key

# Regrid (property data)
REGRID_API_TOKEN=your_regrid_api_token

# Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_MESSAGING_SERVICE_SID=
TWILIO_FROM_NUMBER=
SMS_WEBHOOK_SECRET=
SMS_DRY_RUN=false

# ========== SECURITY [OPTIONAL] ==========
ENCRYPTION_KEY=your_encryption_key

# ========== LOGGING [OPTIONAL] ==========
ENABLE_STRUCTURED_LOGGING=false
